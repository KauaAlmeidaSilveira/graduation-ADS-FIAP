@model IEnumerable<TODOList.Models.Objetivo>

@{
    ViewData["Title"] = "Objetivos";
}

<h1 style="font-family: 'Verdana', sans-serif; text-align: center; color: #2c3e50; margin-bottom: 30px;">Objetivos</h1>

<p style="text-align: center;">
    <a asp-action="Create" class="btn btn-primary"
       style="background-color: #2980b9; border: none; font-family: 'Arial', sans-serif; padding: 12px 25px; border-radius: 5px; color: #fff; text-transform: uppercase; font-weight: bold;">
        Criar Novo Objetivo
    </a>
</p>

<table class="table" style="width: 100%; border-collapse: collapse; margin-top: 30px; font-family: 'Arial', sans-serif;">
    <thead>
        <tr style="background-color: #2c3e50; color: #ecf0f1;">
            <th style="padding: 15px; text-align: left; border-bottom: 2px solid #1f2d3d; text-transform: uppercase;">Nome</th>
            <th style="padding: 15px; text-align: left; border-bottom: 2px solid #1f2d3d; text-transform: uppercase;">Descrição</th>
            <th style="padding: 15px; text-align: left; border-bottom: 2px solid #1f2d3d; text-transform: uppercase;">Data de Criação</th>
            <th style="padding: 15px; text-align: left; border-bottom: 2px solid #1f2d3d; text-transform: uppercase;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f9f9f9; border-bottom: 1px solid #dfe6e9;">
                <td style="padding: 15px; color: #2d3436; font-family: 'Georgia', serif;">@item.Nome</td>
                <td style="padding: 15px; color: #636e72; font-family: 'Georgia', serif;">@item.Descricao</td>
                <td style="padding: 15px; color: #636e72; font-family: 'Georgia', serif;">@item.DataCriacao.ToShortDateString()</td>
                <td style="padding: 15px;">
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-secondary"
                       style="background-color: #27ae60; border: none; color: #fff; padding: 8px 20px; border-radius: 5px; text-transform: uppercase;">
                        Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    ViewData["Title"] = "Lista de TODOs";
    var TODOs = ViewData["AllTodos"] as List<TODO>;
}

<h1 style="font-family: 'Verdana', sans-serif; text-align: center; color: #34495e; margin-bottom: 30px;">Bem-vindo(a) ao TODO List</h1>

<p style="text-align: center;">
    <a class="btn btn-primary" asp-controller="Objetivo" asp-action="Index"
       style="background-color: blueviolet; border-color: #8e44ad; font-family: 'Arial', sans-serif; padding: 12px 20px; color: white; border-radius: 5px;">
        Ver Objetivos
    </a>
</p>

<div style="display: flex; flex-direction: row; flex-wrap: wrap; gap: 20px; justify-content: center; padding: 20px;">
    @{
        if (TODOs != null && TODOs.Any())
        {
            foreach (var todo in TODOs)
            {
                <div class="card" style="width: 18rem; background-color: #f7f9f9; border: 1px solid #dcdde1; border-radius: 10px; box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease;">
                    <img src="https://lh3.googleusercontent.com/proxy/562me2SdGu8FRjCAw_ZTl9dI_cAkig7q8ei-QVqN-sdlTdTDYdBqXnyPRjXpSesf4w4r0KslDwFLFSjsYTWwIZrjPX2-h7Uv6yKQ1H4G" class="card-img-top" alt="Imagem Tarefa"
                         style="border-top-left-radius: 10px; border-top-right-radius: 10px; height: 150px; object-fit: cover;">
                    <div class="card-body" style="padding: 20px; text-align: center;">
                        <h5 class="card-title" style="font-family: 'Georgia', serif; color: #2c3e50;">@todo.Tarefa</h5>
                        <p class="card-text" style="font-size: 14px; color: #7f8c8d;">@todo.Descricao</p>
                        @{
                            if (todo.feto)
                            {
                                <p class="card-text" style="color: green; font-weight: bold;">Tarefa feita</p>
                            }
                            else
                            {
                                <p class="card-text" style="color: red; font-weight: bold;">Tarefa não feita</p>
                            }
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p style="text-align: center; font-size: 18px; color: #e74c3c;">Não há TODOs disponíveis no momento.</p>
        }
    }
</div>